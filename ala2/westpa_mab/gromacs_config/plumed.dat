# vim:ft=plumed

phi: TORSION ATOMS=5,7,9,15
psi: TORSION ATOMS=7,9,15,17

cosphi: MATHEVAL ARG=phi FUNC=0.5+cos(x-1.25) PERIODIC=NO

opes: OPES_METAD ...
  ARG=cosphi
  PACE=1000000
  BARRIER=20
  TEMP=300
  RESTART=YES
  FILE=KERNELS
...

PRINT FMT=%g STRIDE=1 FILE=COLVAR ARG=cosphi,opes.bias

ENDPLUMED

